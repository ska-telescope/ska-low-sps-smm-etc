[Unit]
Description=Web Server service
Requires=rc-local.service

[Service]
Type=simple
ExecStart=/bin/bash /etc/ska-low-smm-tools/web_server_start.sh
ExecStop=/bin/bash /etc/ska-low-smm-tools/web_server_stop.sh
Restart=always
RestartSec=5
TimeoutSec=60
RuntimeMaxSec=infinity
PIDFile=/tmp/name_script.pid

[Install]
WantedBy=multi-user.target
